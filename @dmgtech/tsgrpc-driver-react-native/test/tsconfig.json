{
    "compilerOptions": {
        "strict": true,
        "sourceMap": true,
        "declarationMap": true,
        "declaration": true,
        "baseUrl": ".",
        "outDir": "../dist-test/",
        "composite": true,
        "incremental": true,
        "tsBuildInfoFile": "../dist-test/.tsbuildinfo",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "ES5",
        "downlevelIteration": true,
        "skipLibCheck": true,
        "lib": [
            "ES2018", "DOM"
        ]
    },
    "include": [
        "**/*"
    ],
    "references": [
        { "path": "../tsconfig.json" }
    ]
}